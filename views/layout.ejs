<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>StuHealth - <%= typeof title !== 'undefined' ? title : 'Student Health & Wellness' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/styles.css">
  </head>
  <body class="app-body <%= typeof page !== 'undefined' ? page : '' %>">
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">StuHealth</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
          <ul class="navbar-nav ms-auto">
            <% if (session && session.student) { %>
              <li class="nav-item"><a class="nav-link" href="/student/profile">My Profile</a></li>
            <% } %>
            <li class="nav-item"><a class="nav-link" href="/resources">Resources</a></li>
            <li class="nav-item"><a class="nav-link" href="/health-tips">Health Tips</a></li>
            <li class="nav-item"><a class="nav-link" href="/programs">Programs</a></li>
            <li class="nav-item"><a class="nav-link" href="/support">Support</a></li>
            <li class="nav-item"><a class="nav-link" href="/doctors">Doctors</a></li>
            <li class="nav-item"><a class="nav-link" href="/feedback">Feedback</a></li>
            <% if (session && (session.student || session.isAdmin)) { %>
              <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } %>
            <% if (session && session.isAdmin) { %>
              <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
            <% } else { %>
              <li class="nav-item"><a class="nav-link" href="/admin/login">Admin</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container my-5">
      <%- body %>
    </main>

    <footer class="bg-light py-4 mt-auto">
      <div class="container text-center small text-muted">© <%= new Date().getFullYear() %> StuHealth — Student Health & Wellness</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
