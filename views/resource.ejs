<div class="card shadow-sm">
  <div class="resource-hero">
    <img src="<%= resource.image %>" class="resource-hero-image" alt="<%= resource.title %>">
  </div>
  <div class="card-body">
    <h2 class="card-title"><%= resource.title %></h2>
    <p class="text-muted small">Category: <%= resource.category %> â€¢ Views: <%= resource.views || 0 %></p>
    <p class="card-text"><%= resource.description %></p>
    <div class="mt-3">
      <a href="<%= resource.link %>" class="btn btn-primary" target="_blank">Visit resource</a>
      <a href="/resources" class="btn btn-outline-secondary">Back</a>
    </div>
  </div>
</div>
