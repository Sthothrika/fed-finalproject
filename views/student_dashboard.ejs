<div class="row">
  <div class="col-12 mb-4">
    <h1>Welcome, <%= user.full_name || user.username %></h1>
    <p class="text-muted">Student dashboard — quick links and your daily routine.</p>
  </div>

  <div class="col-md-6 mb-4">
    <div class="card p-3 shadow-sm d-flex flex-row gap-3 align-items-center">
      <div style="width:80px;height:80px;flex:0 0 80px">
        <img src="<%= user.avatar || '/images/placeholder.svg' %>" alt="avatar" style="width:80px;height:80px;object-fit:cover;border-radius:8px">
      </div>
      <div>
        <h5 class="mb-1">Your Profile</h5>
        <p class="mb-1"><strong>Username:</strong> <%= user.username %></p>
        <p class="mb-1"><strong>Name:</strong> <%= user.full_name || 'Not set' %></p>
        <p class="mb-1"><strong>Phone:</strong> <%= user.phone || 'Not set' %></p>
        <p class="mb-0"><a href="/student/profile" class="small">View full profile</a> • <a href="/student/profile/edit" class="small">Edit profile</a></p>
      </div>
    </div>
  </div>

  <div class="col-md-6 mb-4">
    <div class="card p-3 shadow-sm">
      <h5>Today's Routine</h5>
      <pre class="small" style="white-space:pre-wrap;"><%= routine %></pre>
      <p class="mb-0"><a href="/student/profile" class="small">Edit routine</a></p>
    </div>
  </div>

  <div class="col-12">
    <div class="card p-3 shadow-sm">
      <h5>Resources</h5>
      <p class="small text-muted">Quick access to campus resources and programs.</p>
      <p><a href="/resources" class="btn btn-sm btn-primary">Browse resources</a></p>
    </div>
  </div>
  <div class="col-12 mt-3">
    <div class="card p-3 shadow-sm">
      <h5>Enrolled Programs</h5>
      <% if (user.programs) { %>
        <div class="mt-2">
          <% user.programs.split(',').map(p => p.trim()).filter(Boolean).forEach(function(pr){ %>
            <span class="badge bg-secondary me-1"><%= pr %></span>
          <% }) %>
        </div>
      <% } else { %>
        <p class="small text-muted">You are not enrolled in any programs yet.</p>
      <% } %>
    </div>
  </div>
</div>
<div class="card shadow-sm">
  <div class="card-body">
    <h2>Welcome, <%= student.username %></h2>
    <p class="text-muted">This is your student dashboard. Access resources and programs below.</p>
    <div class="mt-3">
      <a href="/resources" class="btn btn-primary me-2">Resources</a>
      <a href="/programs" class="btn btn-outline-primary">Programs</a>
    </div>
  </div>
</div>
