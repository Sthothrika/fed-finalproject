<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title mb-3">Student Signup</h3>
        <% if (error) { %>
          <div class="alert alert-danger"> <%= error %> </div>
        <% } %>
        <form method="post" action="/student/signup">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" name="username" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input class="form-control" name="password" type="password" required>
          </div>
            <div class="row gx-2">
              <div class="col-md-6 mb-3">
                <input name="age" type="number" min="0" class="form-control" placeholder="Age (optional)">
              </div>
              <div class="col-md-6 mb-3">
                <input name="phone" type="text" class="form-control" placeholder="Phone number (optional)">
              </div>
            </div>
          <div>
            <button class="btn btn-success">Create Account</button>
            <a href="/student/login" class="btn btn-outline-secondary">Back to login</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
