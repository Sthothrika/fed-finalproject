<div class="row">
  <div class="col-12 mb-4">
    <h1>Edit Profile</h1>
  </div>

  <div class="col-md-8">
    <div class="card p-3 shadow-sm">
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <form method="POST" action="/student/profile/update">
        <div class="mb-3">
          <label class="form-label">Full name</label>
          <input name="full_name" class="form-control" value="<%= user.full_name || '' %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input name="email" class="form-control" value="<%= user.email || '' %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input name="phone" class="form-control" value="<%= user.phone || '' %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Age</label>
          <input name="age" type="number" min="0" class="form-control" value="<%= typeof user.age !== 'undefined' && user.age !== null ? user.age : '' %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Enrolled programs (comma separated)</label>
          <input name="programs" class="form-control" value="<%= user.programs || '' %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Daily routine (one item per line)</label>
          <textarea name="routine" class="form-control" rows="6"><%= user.routine || '' %></textarea>
        </div>
        <div>
          <button class="btn btn-primary">Save changes</button>
          <a href="/student/profile" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
