<div class="card">
  <div class="card-body">
    <h2>Our Doctors</h2>
    <p class="text-muted">Helpful specialists available for student support. Click a tile to see contact details.</p>
    <div class="row">
      <% (doctors || []).forEach(function(d){ %>
        <div class="col-md-4 mb-3">
          <div class="card h-100 shadow-sm">
            <% if (d.image) { %>
              <img src="<%= d.image %>" class="card-img-top" alt="<%= d.name %>">
            <% } %>
            <div class="card-body">
              <h5 class="card-title mb-1"><%= d.name %></h5>
              <div class="small text-muted mb-2"><%= d.title %></div>
              <div class="mb-2"><strong>Specialty:</strong> <%= d.specialty %></div>
              <div class="small text-muted">Email: <a href="mailto:<%= d.email %>"><%= d.email %></a></div>
              <div class="small text-muted">Phone: <%= d.phone %></div>
            </div>
            <div class="card-footer bg-white">
              <a class="btn btn-sm btn-outline-primary" href="mailto:<%= d.email %>">Contact</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
